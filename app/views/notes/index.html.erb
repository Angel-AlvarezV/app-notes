<p id="notice"><%= notice %></p>

<div class="row">
  <%= form_for :filters, html: { class: 'input-field col s12' }, method: 'get' do |f| %>
    <%= material_icon.search.css_class('prefix') %>
    <%= f.text_field :title, autofocus: true, placeholder: 'Search by title', value: params.dig(:filters, :title) %>
  <% end %>

  <!-- Ordenar notas por mes y su encabezado-->
  <% @notes_by_month.each do |month, notes| %>
    <h5 class="col s12"><%= month %></h5>

  <% notes.each do |note| %>
    <%= link_to note_path(note) do %>
      <div class="col s12 m6 l4"> <!-- Dispositivos moviles (s12), tablets (m6) y computadoras (l4) -->
        <div class="card">
          <div class="card-content black-text">
            <span class="card-title">
              <%= note.title %>
              <span class="right" style="font-size: 50%">
                <%= format_as_localtime note.created_at %>
              </span>
            </span>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<div class="fixed-action-btn">
  <%= link_to new_note_path, title: 'New note', class: 'btn-floating btn-large pulse' do %>
    <%= material_icon.add %>
  <% end %>
</div>
